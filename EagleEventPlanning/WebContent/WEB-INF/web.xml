<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>School Management</display-name>
  <servlet>
    <servlet-name>School RESTful Application</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>schoolREST;systemREST</param-value>
    </init-param>
    
  </servlet>
  <servlet-mapping>
    <servlet-name>School RESTful Application</servlet-name>
    <url-pattern>/school/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>System RESTful Application</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>systemREST</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>System RESTful Application</servlet-name>
    <url-pattern>/system/*</url-pattern>
  </servlet-mapping>
</web-app>